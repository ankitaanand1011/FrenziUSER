<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
       >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            map:uiCompass="true"
            map:uiRotateGestures="true"
            map:uiScrollGestures="false"
            map:uiTiltGestures="true"
            map:uiZoomControls="true"
            map:uiZoomGestures="true"
            tools:context=".MapScreen" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:src="@drawable/left_ar"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/_16sdp" />


        </RelativeLayout>




    </RelativeLayout>



    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/rl_header"
        android:background="@color/dark_pink"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Title"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                >

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/SpinnerTheme"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/et_bg_white_grey_stroke"
                    android:capitalize="words"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Enter Title"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/MidnightBlue"
                    android:textColorHint="@color/Gray"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Address Line 1"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:hint="Enter Address Line 1"
                android:background="@drawable/et_bg_white_grey_stroke"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="@color/Gray"
                android:padding="@dimen/_8sdp"
                android:capitalize="words"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Address Line 2"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:id="@+id/edt_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:hint="Enter Address Line 2"
                android:background="@drawable/et_bg_white_grey_stroke"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="@color/Gray"
                android:padding="@dimen/_8sdp"
                android:capitalize="words"
                android:fontFamily="@font/poppins_regular"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="City"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:hint="City"
                android:background="@drawable/et_bg_white_grey_stroke"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="@color/Gray"
                android:padding="@dimen/_8sdp"
                android:capitalize="words"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="PostCode"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:id="@+id/edt_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:hint="PostCode"
                android:background="@drawable/et_bg_white_grey_stroke"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="@color/Gray"
                android:padding="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Country"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/dark_pink"
                android:fontFamily="@font/poppins_regular"/>
            <EditText
                android:id="@+id/edt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:hint="Country"
                android:background="@drawable/et_bg_white_grey_stroke"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="@color/Gray"
                android:capitalize="words"
                android:padding="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"

                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_bg_pink"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/iv_home"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/home_address_white" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="Home"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/dark_pink"
                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_bg_white_grey_stroke"

                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/iv_work"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/work_address" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="Work"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_bg_white_grey_stroke"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/iv_other"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/other_address"/>

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="Other"
                            android:textAllCaps="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>




                </LinearLayout>


            </RelativeLayout>




















            <TextView
                android:id="@+id/tv_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/MidnightBlue"
                android:padding="@dimen/_10sdp"
                android:text="Save Address"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"/>


        </LinearLayout>

    </ScrollView>




</RelativeLayout>