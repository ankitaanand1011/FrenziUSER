<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="0dp"
    android:background="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    android:outlineSpotShadowColor="#FFFFFF"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rectangle_boder">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:padding="2dp"
                android:text="29 April 2021 18:21"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_date"
                android:background="#DFDCDC" />


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="62dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical"
                android:weightSum=".8">

                <TextView
                    android:id="@+id/txt_pickup_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".2"
                    android:fontFamily="@font/poppins_regular"
                    android:text="18:21"
                    android:textColor="@color/Gray"
                    android:textSize="13sp"

                    />


                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/txt_drop_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".2"
                    android:fontFamily="@font/poppins_regular"
                    android:text="18:21"
                    android:textColor="@color/Gray"
                    android:textSize="13sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="25dp"
                android:layout_toRightOf="@+id/line1"
                android:orientation="vertical"
                android:weightSum=".7">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight=".1"
                    android:src="@drawable/circle_shape" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="#CFCCCC" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/line2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_pickup_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:text="6895 Lorem ipsum dolor sit amet, consectetum adipising "
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_drop_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:padding="15sp"
                    android:text="6895 Lorem ipsum dolor sit amet, consectetum adipising "
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/detail_layout1"
                android:background="@color/transparent_Gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/view1"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Â£ 29"
                    android:textColor="@color/dark_pink"
                    android:textSize="@dimen/_15sdp">

                </TextView>

                <TextView

                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/btn_arrow1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="confirm"
                    android:textColor="@color/MidnightBlue"
                    android:textSize="@dimen/_12sdp"

                    >

                </TextView>

                <ImageView

                    android:id="@+id/btn_arrow1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/next"

                    app:tint="@color/dark_pink">

                </ImageView>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

