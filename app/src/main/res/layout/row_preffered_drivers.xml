<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/full_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="#E1DFDF"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/number">


            <LinearLayout
                android:id="@+id/monica_one"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F8E1DEDE"
                android:padding="8dp"
                android:paddingTop="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Monica G"
                        android:textColor="@color/MidnightBlue"
                        android:textSize="19sp" />

                    <LinearLayout
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp">


                        <LinearLayout

                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:background="@drawable/rectangle_whole_curve_pink"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/star_w" />


                            <TextView
                                android:id="@+id/txt_driver_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="4.8"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/rwctangle_curve_orange"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/white"
                                android:fontFamily="@font/poppins_regular"
                                android:text="6652145789"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right">


                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/MidnightBlue"
                android:text="Select"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>