<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.user.frenzi.Wheretogo">


    <RelativeLayout
        android:id="@+id/back_location"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="21sp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/left_ar"
            android:foreground="?android:selectableItemBackground"
            app:tint="@color/dark_pink" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_back"
            android:id="@+id/txt_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_bold_webfont"
            android:text="Start searching your address"
            android:textColor="@color/MidnightBlue"
            android:textSize="17sp" />


        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/btn_back"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            android:weightSum="1.2">

            <ImageView
                android:id="@+id/pinkdot"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:src="@drawable/circle_shape" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:background="@color/LightGrey" />

            <ImageView
                android:id="@+id/locationdot"
                android:layout_width="12dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".2"
                android:background="@drawable/location" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/location_togo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/btn_back"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/line">

            <EditText
                android:id="@+id/edt_current_location"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rect_white"
                android:clickable="true"
                android:editable="false"
                android:enabled="true"
                android:fontFamily="@font/poppins_semibold"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center_vertical"
                android:hint="Current Location"
                android:outlineAmbientShadowColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="test"
                android:textColor="@color/MidnightBlue"
                android:textColorHint="#CDC9C9"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_wheretoGo"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_below="@id/edt_current_location"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectangle_curve_gray"
                android:editable="false"
                android:enabled="true"
                android:fontFamily="@font/poppins_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:hint="Where to go..."
                android:outlineAmbientShadowColor="@color/black"
                android:paddingLeft="11dp"
                android:paddingTop="5dp"
                android:text="test"
                android:textColor="@color/MidnightBlue"
                android:textSize="13sp" />


        </RelativeLayout>

        <ImageView

            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="49dp"
            android:background="@drawable/add"
            android:visibility="gone"
            android:backgroundTint="@color/black"
            android:padding="5dp"

            />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_location"
        android:background="#F0F2F4">

        <LinearLayout
            android:id="@+id/home_work"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:weightSum="2">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_whole_curve_pink"
                app:cardBackgroundColor="@color/dark_pink"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_add_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginRight="5dp"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/addhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">


                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/home"
                            android:padding="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Add Home"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_whole_curve_pink"
                app:cardBackgroundColor="@color/dark_pink"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">
            <RelativeLayout
                android:id="@+id/btn_add_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/btn_add_home"
                android:layout_weight="1"
                android:background="@drawable/rectangle_whole_curve_pink"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/addwork1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/bage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Add Work"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_work"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/rectangle_whole_curve_pink"
                app:cardBackgroundColor="@color/dark_pink"
                app:cardCornerRadius="23dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/btn_saved_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/btn_add_home"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_whole_curve_pink"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/addwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">


                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Saved Address"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_address_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </RelativeLayout>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="2.24">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/MidnightBlue"
            android:elevation="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:stateListAnimator="@null"
            android:text="Next"
            android:textColor="@color/white"
            android:translationZ="5dp" />

    </RelativeLayout>

</RelativeLayout>